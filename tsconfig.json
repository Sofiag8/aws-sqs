{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017", "es6", "es7", "dom"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "libs/aws-sqs-client/src"
  },
  "include": ["libs/aws-sqs-client/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
